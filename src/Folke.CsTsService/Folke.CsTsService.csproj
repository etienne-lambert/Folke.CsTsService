<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Create Typescript API Client classes from MVC 6 controllers</Description>
    <VersionPrefix>2.0</VersionPrefix>
    <Authors>Sidoine</Authors>
    <TargetFrameworks>net461;netstandard1.6</TargetFrameworks>
    <AssemblyName>Folke.CsTsService</AssemblyName>
    <PackageId>Folke.CsTsService</PackageId>
    <PackageTags>typescript;services</PackageTags>
    <PackageProjectUrl>https://github.com/folkelib/Folke.CsTsService</PackageProjectUrl>
    <PackageLicenseUrl>http://opensource.org/licenses/MIT</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Folke.Mvc.Extensions\src\Folke.Mvc.Extensions\Folke.Mvc.Extensions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.2" />
    <PackageReference Include="System.Runtime.Serialization.Primitives" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
